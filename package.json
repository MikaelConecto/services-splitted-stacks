{
  "name": "aws-nodejs-typescript",
  "version": "1.0.0",
  "description": "Serverless webpack example using Typescript",
  "main": "handler.js",
  "scripts": {
    "deploy": "npm run database:deploy && npm run api-contacts:deploy",
    "format": "npm run api-contacts:format",
    "database:deploy": "cd ./services/database && node --max-old-space-size=4096 ../../node_modules/serverless/bin/serverless deploy -v",
    "api-contacts:deploy": "cd ./services/contacts && node --max-old-space-size=4096 ../../node_modules/serverless/bin/serverless deploy -v",
    "api-contacts:offline": "cd ./services/contacts && node --max-old-space-size=4096 ../../node_modules/serverless/bin/serverless offline start -v",
    "api-contacts:format": "prettier --write \"services/contacts/handler.js\"",
    "deploy-single": "NODE_ENV=development serverless deploy -v function -f"
  },
  "dependencies": {
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.26",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/yup": "^0.26.13",
    "aws-lambda-test-utils": "^1.3.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lambda-tester": "^3.5.0",
    "prettier": "1.17.1",
    "serverless": "^1.43.0",
    "serverless-domain-manager": "^3.2.2",
    "serverless-dotenv-plugin": "^2.1.1",
    "serverless-local-schedule": "^0.1.6",
    "serverless-offline": "^4.10.6",
    "serverless-plugin-split-stacks": "^1.7.3",
    "serverless-webpack": "^5.3.0",
    "source-map-support": "^0.5.12",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.1",
    "typescript": "^3.4.5",
    "webpack": "^4.32.2"
  },
  "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
  "license": "MIT",
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
